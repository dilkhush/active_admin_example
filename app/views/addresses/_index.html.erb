<div class="container">
  <h2>User Address</h2>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Country</th>
          <th>ZiCode</th>
          <th>View</th>
        </tr>
      </thead>
      <tbody>
        <% addresses.each do |address|%>
          <tr>
            <td><%=address.id%></td>
            <td><%=address.address1%> <%=address.address2%></td>
            <td><%=address.city%></td>
            <td><%=address.state%></td>
            <td><%=address.country%></td>
            <td><%=address.zipcode%></td>
            <td><%= link_to 'View', admin_address_path %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
